<div class="row justify-content-center">
  <div class="col col-md-6">
    <%=link_to "新規登録はこちらから", new_user_registration_path,
    class: "btn btn-block btn-primary d-flex justify-content-center align-items-center", style: "height: 50px;" %>

  </div>
  <div class="col col-md-2">
    <h4>本を探す</h4>

    <div class="m-1">
      <p>タイトルから探す</p>

      <%= form_with url: books_path, method: :get, local: true do |f| %>
        <div class="input-group">
          <%= f.text_field :keyword, class: "form-control" %>
          <span class="input-group-btn">
            <%= f.submit '検索', class: "btn btn-outline-primary" %>
          </span>
        </div>
      <% end %>

      <p class="mt-3">ユーザーの読後感から探す</p>
      <div class="m-1">
        <p><%= link_to '感動的', books_path(feeling_after_reading: '感動的') %></p>
        <p><%= link_to '楽しい', books_path(feeling_after_reading: '楽しい') %></p>
        <p><%= link_to '悲しい', books_path(feeling_after_reading: '悲しい') %></p>
        <p><%= link_to 'ワクワク', books_path(feeling_after_reading: 'ワクワク') %></p>
        <p><%= link_to '怖い', books_path(feeling_after_reading: '怖い') %></p>
        <p><%= link_to 'ときめく', books_path(feeling_after_reading: 'ときめく') %></p>
        <p><%= link_to '爽快', books_path(feeling_after_reading: '爽快') %></p>
        <p><%= link_to 'モヤモヤする', books_path(feeling_after_reading: 'モヤモヤする') %></p>
        <p><%= link_to '笑える', books_path(feeling_after_reading: '笑える') %></p>
        <p><%= link_to '実用的', books_path(feeling_after_reading: '実用的') %></p>
        <p><%= link_to '学びがある', books_path(feeling_after_reading: '学びがある') %></p>
        <p><%= link_to '心動かす', books_path(feeling_after_reading: '心動かす') %></p>
        <p><%= link_to 'その他', books_path(feeling_after_reading: 'その他') %></p>
      </div>
    </div>

  </div>
</div>