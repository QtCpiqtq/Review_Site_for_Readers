<div class="row justify-content-center">
  <div class="col col-md-6">

    <h4>読後感一覧</h4>

    <div class="m-1">
      <div class="d-flex justify-content-end">
        <%= form_with model: @feeling_after_reading, url: admin_feeling_after_readings_path, method: :post, class: "d-flex" do |f| %>
          <%= f.text_field :name, class: "form-control" %>
          <%= f.submit "登録する", class: "btn btn-outline-secondary" %>
        <% end %>
      </div>

      <table class="mt-3 table border-bottom">
        <% @feeling_after_readings.each do |feeling_after_reading| %>
          <tr>
            <td><%= feeling_after_reading.id %></td>
            <td><%= feeling_after_reading.name %></td>
            <td><%= link_to "削除する", admin_feeling_after_reading_path(feeling_after_reading.id), method: :delete, data: { confirm: "[確認]この読後感を削除しますか?" }, class: "text-danger" %></td>
          </tr>
        <% end %>
      </table>
    </div>

  </div>
</div>