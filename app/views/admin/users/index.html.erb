<div class="row justify-content-center">
  <div class="col col-md-8">

    <h4 class="mb-3">ユーザー一覧</h4>

    <table class="table border-bottom mt-1 mr-1 ml-1 mb-3">
      <tr class="table-secondary">
        <th>会員ID</th>
        <th>ユーザーネーム</th>
        <th>ステータス</th>
      </tr>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.name, admin_user_path(user.id), class: "text-dark" %></td>
          <td>
            <% if user.is_active == "有効" %>
              <p class="text-success"><%= user.is_active %></p>
            <% elsif user.is_active == "無効" %>
              <p class="text-danger"><%= user.is_active %></p>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
    
    <%= paginate @users %>

  </div>
</div>