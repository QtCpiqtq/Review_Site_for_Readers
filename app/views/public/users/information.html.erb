<div class="row justify-content-center">
  <div class="col col-md-8">

    <h2>会員情報</h2>

    <table class="table table-bordered m-1">
      <tr>
        <th>プロフィール画像</th>
        <td>
          <%= render "public/users/user_image", user: @user, width: 150, height: 150 %>
        </td>
      </tr>
      <tr>
        <th>ユーザーネーム</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
    </table>

    <div class="d-flex justify-content-end pr-1">
    <% if current_user.email != 'guest@guest' %>
      <%= link_to "編集する", information_edit_path, class: "btn btn-info mt-2", style: "width: 300px;" %>
    <% end %>
    </div>

    <div class="mt-5 mb-5">
      <h2>お気に入りの3冊</h2>

      <table class="table border-bottom m-1">

        <% if @favorite_books.present? %>
          <% @favorite_books.each do |favorite_book| %>
            <tr>
              <th>
                <%= link_to favorite_book.book.get_book_title(favorite_book.book.isbn), book_path(favorite_book.book.isbn), class: "text-dark" %>
              </th>
              <td>
                <div class="d-flex justify-content-end">
                  <%= link_to "お気に入りの本から解除する", favorite_book_path(favorite_book.book_id, delete_sort: 0), method: :delete, class: "btn btn-danger" %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <th>お気に入りの本がありません。</th>
          </tr>
        <% end %>

      </table>

      <div class="d-flex justify-content-end mt-2 pr-1">
        <%= link_to "本を探す", books_search_path, class: "btn btn-secondary", style: "width: 300px;" %>
      </div>
    </div>

  </div>
</div>

