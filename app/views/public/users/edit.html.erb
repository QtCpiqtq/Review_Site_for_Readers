<div style="width: 900px; margin: 0 auto;">
  <h2>会員情報編集</h2>

  <%= form_with model: @user, url: information_edit_path, method: :patch do |f| %>
  <%= render "public/shared/error_messages", resource: @user %>

    <table class="table">
      <tr>
        <th>プロフィール画像</th>
        <td>
          <% if @user.image.attached? %>
            <%= image_tag @user.get_image(150,150), class: "border rounded-circle" %>
            <%= link_to "プロフィール画像を設定しない", image_destroy_path, method: :delete, class: "text-dark" %>
          <% else %>
            <%= f.file_field :image, accept: "image/*" %>
          <% end %>
        </td>
      </tr>

      <tr>
        <th>ユーザーネーム</th>
        <td><%= f.text_field :name, class: "form-control" %></td>
      </tr>

      <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email, class: "form-control" %></td>
      </tr>
    </table>

    <div class="d-flex justify-content-end pt-3">
      <div class="mr-5">
        <%= f.submit "編集内容を保存する", class: "btn btn-success", style: "width: 300px;" %>
      </div>
      <div class="mr-5">
        <%= link_to "退会する", unsubscribe_path, class: "btn btn-danger", style: "width: 150px;" %>
      </div>
    </div>
  
  
  
  <% end %>

</div>