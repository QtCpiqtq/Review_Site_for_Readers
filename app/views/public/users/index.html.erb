<div class="row justify-content-center">
  <div class="col col-md-7 m-1">
    
    <h2>検索結果</h2>
    <h3 class="ml-3">検索ワード : <%= params[:keyword] %></h3>
    
     <div class="m-3">
      <% if @users.present? %>
        <table class="table border-bottom">
          <% @users.each do |user| %>
            <tr>
              <td style="width: 100px;">
                <%= render "public/users/user_image", user: user, width: 100, height: 100 %>
              </td>
              <td>
                <h3 class="mt-2">
                  <%= link_to user.name, mypage_path(user.id), class: "text-dark" %>
                </h3>
              </td>
            </tr>
          <% end %>
        </table>
      
      <% else %>
        <h3>ユーザーが見つかりません</h3>
      <% end %>
    </div>

    <%= paginate @users %>

  </div>
</div>
