<div class="row">
  <div class="col-md-2"></div>
  <div class="col col-md">
    <h2 class="mb-5">レビュー作成</h2>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col col-md-6">

    <h3 class="text-center"><%= @book.title %></h3>

    <%= form_with model: @review, url: book_reviews_path(params[:isbn]), method: :post do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>
            評価
          </th>
          <td>
            <div id="post_raty"></div>
          </td>
        </tr>
        <tr>
          <th>
            読後感(任意)
          </th>
          <td>
            <%= f.collection_select(:feeling_after_reading_id, @feeling_after_reading, :id, :name, {prompt: "--読後感を選択--"}) %>
          </td>
        </tr>
        <tr>
          <th>
            レビュー
          </th>
      </table>

      <%= f.text_area :body, class: "form-control", style: "height: 150px;" %>

    <%= f.submit '投稿する', class: "btn btn-success btn-block mt-5" %>
    <% end %>

  </div>
</div>

<script>
    $('#post_raty').empty();
    $('#post_raty').raty({
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      starHalf: "<%= asset_path('star-half.png') %>",
      scoreName: 'review[evolution]',
      readOnly: false,
      score: <%= @review.evolution || 0 %>
    });
</script>
