<%= render 'public/header' %>

<h4><%= @book.title %></h4>

<%= form_with model: @reviews, url: book_reviews_path(params[:isbn]), method: :post do |f| %>
    <p>評価</p>
    <%= f.select :evolution, [
    ["★☆☆☆☆", "★☆☆☆☆"],
    ["★★☆☆☆", "★★☆☆☆"],
    ["★★★☆☆", "★★★☆☆"],
    ["★★★★☆", "★★★★☆"],
    ["★★★★★", "★★★★★"]
    ], prompt: "☆☆☆☆☆" %>
    
    <p>読後感(任意)</p>
    <%= f.select :feeling_after_reading, [ ["感動的","感動的"], ["楽しい","楽しい"], ["悲しい", "悲しい"], 
    ["ワクワク", "ワクワク"], ["怖い", "怖い"], ["ときめく", "ときめく"],["爽快", "爽快"], ["モヤモヤ", "モヤモヤ"], 
    ["笑える", "笑える"], ["実用的", "実用的"] ,["学びがある", "学びがある"], ["心動かす", "心動かす"], 
    ["その他", "その他"]], prompt: "読後感を選択する" %>
    
    <p>レビュー</p>
    <%= f.text_area :body %>
    
    
    <%= f.submit '投稿する' %>
<% end %>